<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/singleCoinLine">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/coinImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/coinName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ethereum Classic (ETC)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/marketName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    android:text="Poloniex" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/singleCoinLine"
            android:id="@+id/singleCoinLine1">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/coinsQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="0.12345678" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/clor_green"
                    android:text="2345.67" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/singleCoinLine1"
            android:id="@+id/singleCoinLine2">

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/labelQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:text="Quantity" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp"
                    android:text="Total price" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_below="@+id/singleCoinLine2"
            android:id="@+id/singleCoinLine3">

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/deleteImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_delete" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/labelFromStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:text="from start:"/>

                <TextView
                    android:id="@+id/percentValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/clor_green"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="+ 2.7 %" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/moreImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_more" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>